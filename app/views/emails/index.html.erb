<%= form_tag(emails_path, method: "post", class: "form", remote: true) do %>
  <div class="text-center">
      <%= submit_tag("Recevoir un email", class: "btn btn-start-order") %>
  </div>
<% end %>

<table id = "email-list" class="table table-bordered col-md-10 mx-auto">
  <thead class="thead-light"> 
    <tr>
        <th class="col-md-4">Liste des emails</th>
        <th class="col-md-8">Email sélectionné</th>
    </tr>
  </thead>
  <% Email.all.order("created_at DESC").each do |email| %>
    <tr>
      <td class="p-0">
        <%= render "email_list", email: email %>
      </td>
    </tr>
  <% end %>
</table>